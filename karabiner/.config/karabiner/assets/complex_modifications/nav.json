{
  "title": "Nav Layer",
  "maintainers": [
    "Julian Iaquinandi"
  ],
  "rules": [
    {
      "description": "Layer: Nav",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "mandatory": [],
              "optional": [
                "any"
              ]
            }
          },
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 100,
            "basic.to_if_held_down_threshold_milliseconds": 100
          },
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "nav_mode",
                "value": 0
              }
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape" 
            }
          ],
          
          "to_if_held_down": [
            {
              "set_variable": {
                "name": "nav_mode",
                "value": 1
              }
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [],
              "optional": []
            }
          },
          "to": {
            "key_code": "left_arrow"
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "nav_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": [],
              "optional": []
            }
          },
          "to": {
            "key_code": "down_arrow"
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "nav_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [],
              "optional": []
            }
          },
          "to": {
            "key_code": "up_arrow"
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "nav_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": [],
              "optional": []
            }
          },
          "to": {
            "key_code": "right_arrow"
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "nav_mode",
              "value": 1
            }
          ]
        },



        {
          "type": "basic",
          "from": {
            "key_code": "u",
            "modifiers": {
              "mandatory": [],
              "optional": []
            }
          },
          "to": {
            "key_code": "home"
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "nav_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "i",
            "modifiers": {
              "mandatory": [],
              "optional": []
            }
          },
          "to": {
            "key_code": "page_down"
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "nav_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "o",
            "modifiers": {
              "mandatory": [],
              "optional": []
            }
          },
          "to": {
            "key_code": "page_up"
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "nav_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": [],
              "optional": []
            }
          },
          "to": {
            "key_code": "end"
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "nav_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "space",
            "modifiers": {
              "mandatory": [],
              "optional": []
            }
          },
          "to": {
            "key_code": "return_or_enter"
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "nav_mode",
              "value": 1
            }
          ]
        }
       
      
      ]
    }
  ]
}