// Extend layout based on DreymaR's Extend mappings
// https://forum.colemak.com/topic/2014-extend-extra-extreme/
{
  "filter": "no klc,keylayout",
  "singletonKeys": [
    [ "CapsLock", "Extend" ]
  ],
  "shiftlevels": [ "Extend", "Shift+Extend" ],
  "keys": [
      
    { "pos": "q", "letters": [ "!" ] },
    { "pos": "w", "letters": [ "@" ] },
    { "pos": "e", "letters": [ "#" ] },
    { "pos": "r", "letters": [ "_" ] },
    { "pos": "t", "letters": [ "%" ] },
  
    { "pos": "y", "letters": [ "%" ] },
    { "pos": "u", "letters": [ "Home" ] },
    { "pos": "i", "letters": [ "PageDown" ] },
    { "pos": "o", "letters": [ "PageUp" ] },
    { "pos": "p", "letters": [ "End" ] },
     
    { "pos": "a", "letters": [ "?" ] },
    { "pos": "s", "letters": [ "`" ] },
    { "pos": "d", "letters": [ "\"" ] },
    { "pos": "f", "letters": [ "'" ] },
    { "pos": "g", "letters": [ "^" ] },
    
    { "pos": "h", "letters": [ "$" ] },
    { "pos": "j", "letters": [ "Left" ] },
    { "pos": "k", "letters": [ "Down" ] },
    { "pos": "l", "letters": [ "Up" ] },
    { "pos": ";", "letters": [ "Right" ] },
     
    { "pos": "z", "letters": [ "|" ] },
    { "pos": "x", "letters": [ "[" ] },
    { "pos": "c", "letters": [ "{" ] },
    { "pos": "v", "letters": [ "(" ] },
    { "pos": "b", "letters": [ "&" ] },
    
    { "pos": "n", "letters": [ "\\" ] },
    { "pos": "m", "letters": [ ")" ] },
    { "pos": ",", "letters": [ "}" ] },
    { "pos": ".", "letters": [ "]" ] },
    { "pos": "/", "letters": [ "|" ] }
  ]
}
