# Restart Yabai
alt - q : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# focus window
alt - k : yabai -m window --focus next
alt - j : yabai -m window --focus prev

#  swap windows
alt - l : yabai -m space --mirror y-axis
alt - h : yabai -m space --mirror x-axis

# resize window
alt - m : yabai -m window --ratio abs:0.666
alt - n : yabai -m window --ratio abs:0.55

# focus workspace
alt - v : yabai -m space --focus next
alt - b : yabai -m space --focus prev


alt - c : yabai -m space --toggle padding; yabai -m space --toggle gap
alt - x : yabai -m window --toggle split
alt - z : yabai -m window --toggle sticky

alt - g : yabai -m window --toggle zoom-parent
alt - f : yabai -m window --toggle zoom-fullscreen

alt - t : yabai -m window --toggle float;\
            yabai -m window --grid 4:4:1:1:2:2





