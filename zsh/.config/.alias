function clone() {
  clear
  echo "Enter repo name || url"
  echo "------------------------"
  read repo
  clear

  start=$(echo $repo | cut -c 1-4)

  if [ "$start" = "http" ]; then
    git clone $repo
  else
    git clone git@github.com:kensleDev/$repo
  fi
}

function ac() {
  clear
  cat ~/.config/scripts/asci/emoji.txt
  read emoji

  clear
  cat ~/.config/scripts/asci/msg.txt
  read msg
  clear

  git add -A
  git commit -m ":$emoji: $msg"
}

